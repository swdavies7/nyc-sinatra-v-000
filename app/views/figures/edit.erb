<form action="/figures/<%=@figure.id%>" method="post">
  <input type="hidden" id="hidden" name="_method" value="PATCH">
  <p>Edit Figure:<input type="text" id="figure_name" name="figure[name]" value="<%=@figure.name%>"></p>
  <h3>Titles</h3>
    <%Title.all.each do |title|%>
      <%=title.name%>
      <input type="checkbox" id="title_<%=title.id%>" name="figure[title_ids][]" value="<%= title.id %>"<%= 'checked' if @figure.titles.include?(title)%>>
      <%end%>
  <p>New Title:<input type="text" id="new_title" name="title[name]"></p>
    <%Landmark.all.each do |landmark|%>
      <%=landmark.name%>
      <input type="checkbox" id="landmark_<%=landmark.id%>" name="figure[landmark_ids][]" value="<%=landmark.id%>"<%='checked' if @figure.landmarks.include?(landmark)%>>
    <%end%>
  <p>Landmark Name:<input type="text" id="new_landmark" name="landmark[name]"></p>
  <p>Landmark Year Completed:<input type="text" name="landmark[year_completed]"></p>
  <input type="submit" value="Edit Figure">
</form>